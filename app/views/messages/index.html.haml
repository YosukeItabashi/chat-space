.content-left
  .user-name
    = current_user.name
  = link_to new_group_path do
    %i.fa.fa-pencil-square-o
  = link_to edit_user_path(current_user) do
    %i.fa.fa-cog

  .group-list
    = render partial: 'messages/group-list', collection: @groups, as: :group

.content-right
  .group
    %p.group__name
      = @group.name
    %p.group__member
      Members:
      = @users.pluck :name
  = link_to edit_group_path(@group) do
    %p.group__btn
      Edit

  .chat
    %p.chat__user
      板橋洋輔
    %p.chat__date
      2016/10/02 06:27:07
    %p.chat__content
      なるほど

  .bottom-content
    .submit
    %p.submit__content
      ここにテキスト
    %i.fa.fa-file-image-o
    %p.submit__btn
      Send
