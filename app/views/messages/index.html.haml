= render 'content-left'

.content-right
  .group
    %p.group__name
      = @group.name
    %p.group__member
      Members:
      = @users.pluck :name
  = link_to edit_group_path(@group) do
    %p.group__btn
      メンバー編集

  .chat
    = render partial: 'chat', collection: @messages, as: :message

  .bottom-content
    .submit
    = form_for [@group, @message], html: { class: "form js-message" } do |f|
      = f.text_field :body, class: "submit__content js-form__text-field", placeholder: 'メッセージを入力してください'
      %label.image-uploader
        = f.file_field :image
        %i.fa.fa-file-image-o
      %p
        = f.submit "Send", class: "submit__btn", name: "Commit"
